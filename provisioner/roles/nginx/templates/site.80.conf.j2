# {{ ansible_managed }}
server {
    listen       80;
    server_name  {{ domain_name }};

    {% if use_letsencrypt %}
        location /.well-known/acme-challenge/ {
            root {{ letsencrypt_challange_root }};
            try_files $uri =404;
        }
    {% endif %}

    location / {
        return 301   https://$server_name$request_uri;
    }
}
